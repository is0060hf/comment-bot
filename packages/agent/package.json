{
  "name": "@comment-bot/agent",
  "version": "1.0.0",
  "description": "Comment bot local agent for live streaming",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest --bail --forceExit",
    "test:watch": "jest --watch --bail",
    "test:coverage": "jest --coverage --bail --forceExit",
    "test:integration": "jest --testPathPattern=integration --bail --forceExit",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "auth:youtube": "tsx scripts/youtube-auth.ts",
    "cli": "ts-node --project tsconfig.cli.json bin/comment-bot"
  },
  "bin": {
    "comment-bot": "./bin/comment-bot"
  },
  "keywords": [
    "youtube",
    "live",
    "comment",
    "bot"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@comment-bot/shared": "^1.0.0",
    "@deepgram/sdk": "^4.11.2",
    "@google-cloud/speech": "^7.2.1",
    "@types/lodash": "^4.17.20",
    "chokidar": "^3.6.0",
    "commander": "^11.1.0",
    "dotenv": "^16.4.5",
    "form-data": "^4.0.4",
    "google-auth-library": "^9.4.1",
    "googleapis": "^128.0.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "open": "^8.4.2",
    "openai": "^6.5.0",
    "winston": "^3.11.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/axios": "^0.9.36",
    "@types/form-data": "^2.2.1",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "axios": "^1.12.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
