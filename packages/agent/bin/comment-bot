#!/usr/bin/env node

/**
 * Comment Bot CLI エントリポイント
 */

// TypeScriptサポート
require('ts-node/register');

// CLIを実行
const { CommentBotCLI } = require('../src/cli');

const cli = new CommentBotCLI();
cli.run(process.argv.slice(2)).catch((error) => {
  console.error('Fatal error:', error);
  process.exit(1);
});

