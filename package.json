{
  "name": "comment-bot",
  "version": "1.0.0",
  "private": true,
  "description": "YouTube Live配信向けコメントボット",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:shared": "npm run build -w @comment-bot/shared",
    "build:agent": "npm run build:shared && npm run build -w @comment-bot/agent",
    "build:web": "npm run build:shared && npm run build -w @comment-bot/web",
    "test": "npm run test --workspaces --if-present",
    "test:agent": "npm run test -w @comment-bot/agent",
    "test:shared": "npm run test -w @comment-bot/shared",
    "test:web": "npm run test -w @comment-bot/web --if-present",
    "test:integration": "npm run test:integration -w @comment-bot/agent",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "clean": "npm run clean --workspaces --if-present && rimraf node_modules",
    "dev:agent": "npm run dev -w @comment-bot/agent --if-present",
    "dev:web": "npm run dev -w @comment-bot/web",
    "test:root": "jest --config jest.config.js",
    "postinstall": "npm run build:shared"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "prettier": "^3.2.0",
    "rimraf": "^6.0.1",
    "jest": "^30.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/comment-bot.git"
  },
  "author": "",
  "license": "MIT"
}
